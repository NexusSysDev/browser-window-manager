{
  "name": "browser-window-manager",
  "version": "1.0.0",
  "description": "A modern window manager right in a browser, with infinite size of the area for windows.",
  "license": "MIT",
  "author": {
    "name": "nexussysdev",
    "email": "nexussysdev@protonmail.com"
  },
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "clear && electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "electron": "^36.2.0"
  },
  "build": {
    "appId": "com.nexussysdev.browser-wm",
    "productName": "Browser-Window-Manager",
    "files": [
      "**/*",
      "!node_modules/.cache"
    ],
    "linux": {
      "target": ["deb","AppImage"],
      "category": "SystemApp"
    },
    "win": {
      "target": ["nsis", "portable"]
    }
  }
}
